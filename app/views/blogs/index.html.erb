<h1>一覧</h1>
<!-- <p><%= notice %></p> -->
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>

    <% if blog.user_id == current_user.id %>
    <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
    <td><%= link_to '削除', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>

  </tr>
<% end %>
</table>
<%= link_to '投稿', new_blog_path %>
